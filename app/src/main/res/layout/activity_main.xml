<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f00ff00"
    tools:context=".UI.MainActivity">

    <EditText
        android:id="@+id/ratio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:visibility="invisible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tips"
        android:layout_below="@+id/meaning" />

    <EditText
        android:id="@+id/input_word"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/getFile"
        android:hint="请输入单词，多个单词以英文逗号隔开"
        android:inputType="text"
        android:singleLine="true"
        android:text="" />

    <CheckBox
        android:id="@+id/default_to_diction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_word"
        android:enabled="true"
        android:text="默认添加到" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/default_to_diction"
        android:layout_alignBottom="@+id/default_to_diction"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/default_to_diction"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="#ff0000" />

    <ImageView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/input_word"
        android:layout_alignRight="@+id/input_word"
        android:layout_alignBottom="@+id/input_word"
        android:layout_marginRight="8dp"
        android:onClick="clearText"
        android:src="@drawable/ic_clear" />

    <TextView
        android:id="@+id/phoneti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goto_all_words_list"
        android:layout_alignLeft="@id/input_word"
        android:layout_alignRight="@id/input_word" />
    <TextView
        android:id="@+id/meaning"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/phoneti"
        android:layout_alignLeft="@id/input_word"
        android:layout_alignRight="@id/input_word" />

    <Button
        android:id="@+id/goto_all_words_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/default_to_diction"
        android:layout_alignLeft="@+id/input_word"
        android:layout_alignRight="@id/input_word"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/getFile"
        android:onClick="searchHistory"
        android:text="查找记录" />

    <Button
        android:id="@+id/getFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/input_word"
        android:layout_alignParentRight="true"
        android:onClick="getFile"
        android:padding="15dp"
        android:text="查找" />

    <LinearLayout
        android:id="@+id/play_sound_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goto_all_words_list"
        android:layout_toRightOf="@+id/goto_all_words_list"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/play_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getFile"
            android:layout_alignLeft="@+id/ratio"
            android:layout_alignRight="@id/ratio"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/sound_boy" />

        <ImageView
            android:id="@+id/play_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratio"
            android:layout_alignRight="@id/ratio"
            android:layout_weight="1"

            android:padding="10dp"
            android:src="@drawable/sound_girl" />
    </LinearLayout>

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="王鹏泽，你行的!!!" />

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>